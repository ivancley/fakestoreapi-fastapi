# ============================================
# CONFIGURAÇÃO DO BANCO DE DADOS
# ============================================

# Para conectar ao PostgreSQL do Docker Compose:
DATABASE_URL=postgresql+asyncpg://fakestore_user:fakestore_pass@localhost:5432/fakestore_db

# Para instalação local (ajuste conforme sua configuração):
# DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/dbname

# ============================================
# CONFIGURAÇÃO DO REDIS
# ============================================

# Para conectar ao Redis do Docker Compose:
REDIS_URL=redis://redis:6379/0

# Para instalação local (sem senha):
# REDIS_URL=redis://localhost:6379/0

# Para instalação local (com senha):
# REDIS_URL=redis://:senha@localhost:6379/0

REDIS_TTL=300

# ============================================
# CONFIGURAÇÃO JWT
# ============================================

ACCESS_TOKEN_EXPIRE_MINUTES=20
REFRESH_TOKEN_EXPIRE_DAYS=1
JWT_SECRET_KEY=minha_chave_ultra_secreta
JWT_ALGORITHM=HS256
